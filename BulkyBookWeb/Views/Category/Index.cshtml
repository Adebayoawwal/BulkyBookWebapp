@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i>Create New Category</a>
        </div>
    </div>
   <br /> <br />
<table class="table table-bordered table-striped" style="100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Date
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="30%">
                    @obj.Name
                </td>
                <td width="30%">
                    @obj.DisplayOrder
                </td>
                    <td width="30%">
                        @obj.CreateDateTime
                    </td>
                <td>
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary">Edit</a>
                </td>
                <td>
                        <a asp-controller="Category" asp-route-id="@obj.Id" asp-action="Delete" class="btn btn-danger">Delete</a>
                    </td>
            </tr>
        }
    </tbody>
</table>
</div>
